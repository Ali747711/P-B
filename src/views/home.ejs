 <%- include('includes/header') %> 

<link rel="stylesheet" type="text/css" href="/css/home.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.js"></script>

<body>
  <div class="home-container">
    <div class="navigation-menu">
      <ul class="nav justify-content-center">
        <li class="nav-item" style="cursor: pointer">
          <a class="nav-link active" href="/admin">Home</a>
        </li>
        <% if(!member) { %>
        <li class="nav-item" style="cursor: pointer">
          <a class="nav-link" href="/admin/signup">Signup</a>
        </li>
        <li class="nav-item" style="cursor: pointer">
          <a class="nav-link" href="/admin/login">Login</a>
        </li>
        <% } else { %>
        <li class="nav-item" style="cursor: pointer">
          <a class="nav-link" href="/admin/product/all">Menu</a>
        </li>
        <li class="nav-item" style="cursor: pointer">
          <a class="nav-link" href="/admin/user/all">Users</a>
        </li>
        <li
          class="nav-item"
          style="cursor: pointer"
          onclick="return confirm('Do you want to logout?')"
        >
          <a class="nav-link" href="/admin/logout">Logout</a>
        </li>
        <% } %>
      </ul>
    </div>

 


  <div class="kaleidoscope-animation">
  <svg class="kaleidoscope" viewBox="0 0 500 500">
    <defs>
      <radialGradient id="colorGrad1">
        <stop offset="0%" stop-color="#ff6b6b" />
        <stop offset="100%" stop-color="#4ecdc4" />
      </radialGradient>
      <radialGradient id="colorGrad2">
        <stop offset="0%" stop-color="#45b7d1" />
        <stop offset="100%" stop-color="#f9ca24" />
      </radialGradient>
      <radialGradient id="colorGrad3">
        <stop offset="0%" stop-color="#a29bfe" />
        <stop offset="100%" stop-color="#fd79a8" />
      </radialGradient>
    </defs>
    
    <!-- Rotating circles -->
    <circle class="circle circle-1" cx="250" cy="250" r="80" fill="url(#colorGrad1)" opacity="0.7" />
    <circle class="circle circle-2" cx="250" cy="250" r="60" fill="url(#colorGrad2)" opacity="0.7" />
    <circle class="circle circle-3" cx="250" cy="250" r="40" fill="url(#colorGrad3)" opacity="0.7" />
    
    <!-- Rotating squares -->
    <rect class="square square-1" x="210" y="210" width="80" height="80" fill="none" stroke="#ff6b6b" stroke-width="3" opacity="0.8" />
    <rect class="square square-2" x="190" y="190" width="120" height="120" fill="none" stroke="#4ecdc4" stroke-width="3" opacity="0.8" />
    <rect class="square square-3" x="170" y="170" width="160" height="160" fill="none" stroke="#f9ca24" stroke-width="3" opacity="0.8" />
    
    <!-- Rotating triangles -->
    <polygon class="triangle triangle-1" points="250,150 300,230 200,230" fill="none" stroke="#a29bfe" stroke-width="3" opacity="0.8" />
    <polygon class="triangle triangle-2" points="250,130 320,250 180,250" fill="none" stroke="#fd79a8" stroke-width="3" opacity="0.8" />
    <polygon class="triangle triangle-3" points="250,110 340,270 160,270" fill="none" stroke="#45b7d1" stroke-width="3" opacity="0.8" />
    
    <!-- Star points -->
    <circle class="star-point sp-1" cx="250" cy="100" r="8" fill="#ff6b6b" />
    <circle class="star-point sp-2" cx="350" cy="250" r="8" fill="#4ecdc4" />
    <circle class="star-point sp-3" cx="250" cy="400" r="8" fill="#f9ca24" />
    <circle class="star-point sp-4" cx="150" cy="250" r="8" fill="#a29bfe" />
    <circle class="star-point sp-5" cx="320" cy="180" r="8" fill="#fd79a8" />
    <circle class="star-point sp-6" cx="320" cy="320" r="8" fill="#45b7d1" />
    <circle class="star-point sp-7" cx="180" cy="320" r="8" fill="#ff6b6b" />
    <circle class="star-point sp-8" cx="180" cy="180" r="8" fill="#4ecdc4" />
  </svg>
</div>

  <script type="text/javascript" src="/js/home.js"></script>
</body>

